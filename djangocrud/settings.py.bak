                line = line.strip()
                if line and not line.startswith('#') and '=' in line:
                    key, value = line.split('=', 1)
                    key_stripped = key.strip()
                    value_stripped = value.strip()
                    # Sobrescribir directamente para asegurar que .env tiene prioridad
                    # Esto previene que .env.bak interfiera
                    os.environ[key_stripped] = value_stripped
else:
    # Si .env no existe, usar valores por defecto
    pass


